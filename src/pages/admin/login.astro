---
// src/pages/admin/login.astro
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/index/NavBar.astro';
---

<Layout title="Acceso Administracion | HITRO">
  <Navbar />
  <main class="pt-24 bg-brand-bg min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full bg-brand-card border border-brand-border rounded-[2rem] p-8 m-4">
      <h1 class="text-3xl font-display font-black text-white uppercase text-center mb-6">Acceso de administracion</h1>
      <form id="login-form">
        <div class="mb-4">
          <label for="password" class="block text-brand-muted font-sans text-sm mb-2">Contrasena</label>
          <input type="password" id="password" name="password" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-brand-blue" />
        </div>
        <button type="submit" class="w-full bg-brand-blue text-white font-bold py-3 rounded-lg hover:bg-blue-600 transition-all duration-300 uppercase tracking-wider">
          Entrar
        </button>
        <p id="error-message" class="text-red-500 text-sm mt-4 text-center"></p>
      </form>
    </div>
  </main>
</Layout>

<script>
  import { useAuth } from '../../hooks/useAuth';
  import { useToast } from '../../hooks/useToast';

  const auth = useAuth();
  const toast = useToast();
  const loginForm = document.getElementById('login-form') as HTMLFormElement | null;
  if (!loginForm) {
    console.warn('No se encontro el formulario de acceso.');
  } else {
    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const password = (form.elements.namedItem('password') as HTMLInputElement).value;
      const errorMessage = document.getElementById('error-message') as HTMLElement;
      const adminPassword = import.meta.env.PUBLIC_ADMIN_PASSWORD || '';
      
      errorMessage.textContent = '';
      if (!password || !password.trim()) {
        errorMessage.textContent = 'Introduce la contrasena.';
        return;
      }

      try {
        const result = auth.login(password, adminPassword);
        if (result.ok) {
          toast.success('Acceso concedido');
          window.location.href = '/admin';
        } else {
          errorMessage.textContent = result.message || 'Contrasena incorrecta.';
          (form.elements.namedItem('password') as HTMLInputElement).value = '';
        }
      } catch (error) {
        console.error('Ocurrio un error durante el acceso:', error);
        errorMessage.textContent = 'Ocurrio un error inesperado. Intentalo de nuevo.';
      }
    });
  }
</script>
