---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/index/NavBar.astro';
---

<Layout title="Comprar | HITRO">
  <Navbar />
  <main class="pt-28 pb-16 px-4 bg-brand-bg min-h-screen">
    <div class="max-w-5xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-6">
      <section class="lg:col-span-2 bg-brand-card border border-brand-border rounded-[2rem] p-6 md:p-8">
        <p class="text-brand-blue uppercase tracking-widest text-xs font-bold mb-2">Checkout</p>
        <h1 class="text-3xl md:text-4xl font-display font-black text-white uppercase mb-6">Finalizar compra</h1>

        <form class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-brand-muted text-sm mb-2" for="nombre">Nombre</label>
              <input id="nombre" type="text" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white" placeholder="Tu nombre" />
            </div>
            <div>
              <label class="block text-brand-muted text-sm mb-2" for="email">Email</label>
              <input id="email" type="email" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white" placeholder="tu@email.com" />
            </div>
          </div>

          <div>
            <label class="block text-brand-muted text-sm mb-2" for="direccion">Direccion</label>
            <input id="direccion" type="text" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white" placeholder="Calle, numero, ciudad" />
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-brand-muted text-sm mb-2" for="cp">Codigo postal</label>
              <input id="cp" type="text" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white" />
            </div>
            <div>
              <label class="block text-brand-muted text-sm mb-2" for="pais">Pais</label>
              <input id="pais" type="text" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white" value="Espana" />
            </div>
            <div>
              <label class="block text-brand-muted text-sm mb-2" for="telefono">Telefono</label>
              <input id="telefono" type="text" class="w-full bg-[#050505] border border-brand-border rounded-lg px-4 py-3 text-white" />
            </div>
          </div>

          <button type="button" id="checkout-btn" class="w-full md:w-auto bg-brand-blue text-white font-bold py-3 px-8 rounded-lg hover:bg-blue-600 transition-all duration-300 uppercase tracking-wider">
            Confirmar pedido
          </button>
          <p id="checkout-msg" class="text-sm text-brand-muted"></p>
        </form>
      </section>

      <aside class="bg-brand-card border border-brand-border rounded-[2rem] p-6 h-fit">
        <h2 class="text-white font-display font-bold text-xl uppercase mb-4">Resumen</h2>
        <p class="text-brand-muted text-sm mb-4">Revisa tus productos desde la tienda antes de confirmar.</p>
        <a href="/store" class="inline-flex items-center justify-center w-full bg-white text-black font-bold py-3 rounded-xl hover:bg-brand-blue hover:text-white transition-all duration-300 uppercase tracking-wider text-sm">
          Volver a tienda
        </a>
      </aside>
    </div>
  </main>
</Layout>

<script>
  const btn = document.getElementById('checkout-btn');
  const msg = document.getElementById('checkout-msg');

  btn?.addEventListener('click', () => {
    if (!msg) return;
    msg.textContent = 'Pedido confirmado. Te contactaremos por email con los siguientes pasos.';
    msg.className = 'text-sm text-green-400';
  });
</script>
