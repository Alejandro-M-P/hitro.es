---
// src/components/index/NavBar.astro
import { ShoppingBag, User } from 'lucide-astro';

const scrollLinks = [
  { name: 'El Metodo', href: '/#metod' },
  { name: 'Admision', href: '/#admission' },
  { name: 'Entrenamiento', href: '/#training' },
  { name: 'Coach', href: '/#coach' },
];

const externalLinks = [
  { name: 'Aula Virtual', href: '/AulaVirtual', style: 'text-blue-500 hover:text-white' },
  { name: 'Tienda', href: '/store', style: 'bg-white text-black px-5 py-2 rounded-full hover:bg-blue-600 hover:text-white' }
];

let mobileLinks = [
  ...scrollLinks,
  { name: 'Aula Virtual', href: '/AulaVirtual' },
  { name: 'Tienda', href: '/store' },
];
---

<nav class="fixed top-3 w-full z-50 px-3 md:px-4 flex flex-col items-center">
  <div class="relative w-full max-w-7xl bg-black/90 backdrop-blur-md border border-white/10 rounded-full px-4 md:px-6 py-3 flex justify-between items-center shadow-2xl z-50">
    <a href="/" class="text-lg md:text-xl font-bold italic text-white font-display">
      <span class="text-blue-600">H</span>ITRO
    </a>

    <div class="hidden md:flex items-center gap-8 text-sm font-bold text-gray-400 absolute left-1/2 -translate-x-1/2">
      {scrollLinks.map((link) => (
        <a href={link.href} class="hover:text-white transition-colors uppercase tracking-wide">
          {link.name}
        </a>
      ))}
      <a href={externalLinks[0].href} class={`${externalLinks[0].style} transition-colors uppercase tracking-wide flex items-center gap-1`}>
        {externalLinks[0].name}
      </a>
    </div>

    <div class="hidden md:flex items-center gap-4">
      <div class="relative" id="user-dropdown-container">
        <button id="user-dropdown-toggle" class="w-10 h-10 rounded-full border border-white/20 text-white inline-flex items-center justify-center hover:bg-white/10 transition-colors">
          <User class="w-5 h-5" />
        </button>
        <div id="user-dropdown-menu" class="absolute right-0 mt-2 w-48 bg-black/90 backdrop-blur-md border border-white/10 rounded-lg shadow-lg hidden">
          <!-- Dropdown items will be injected here -->
        </div>
      </div>
      
      {Astro.url.pathname.startsWith('/store') && (
        <div id="store-cart-toggle" class="store-cart">
          <button aria-label="Abrir carrito" class="cart-toggle relative inline-flex items-center justify-center gap-2 px-5 py-2 bg-brand-blue text-white rounded-full font-black hover:bg-blue-600 transition-all duration-300 text-[10px] uppercase tracking-widest">
            <ShoppingBag class="w-3 h-3" />
            <span>Carrito</span>
            <span id="cart-count" class="inline-flex items-center justify-center min-w-[18px] h-4 px-1.5 text-[9px] font-bold rounded-full bg-black/80 border border-white/20">0</span>
          </button>
        </div>
      )}
      {!Astro.url.pathname.startsWith('/store') && (
        <a href={externalLinks[1].href} class={`${externalLinks[1].style} text-[10px] font-black transition-all uppercase tracking-widest`}>
          {externalLinks[1].name}
        </a>
      )}
    </div>

    <div class="md:hidden flex items-center gap-2">
      <div id="auth-section-mobile"></div>
      <button id="mobile-menu-toggle" type="button" aria-label="Abrir menu" aria-expanded="false" class="w-10 h-10 rounded-full border border-white/20 text-white inline-flex items-center justify-center hover:bg-white/10 transition-colors">
        <svg id="icon-open" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
        <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="md:hidden w-full max-w-7xl mt-2 bg-black/95 border border-white/10 rounded-2xl p-3 shadow-2xl hidden">
    <div class="flex flex-col gap-1">
      {mobileLinks.map((link) => (
        <a href={link.href} class="mobile-menu-link text-white/90 hover:text-white hover:bg-white/10 rounded-xl px-4 py-3 text-sm font-bold uppercase tracking-wide transition-colors">
          {link.name}
        </a>
      ))}
      <div id="auth-section-mobile-menu" class="border-t border-white/10 pt-2 mt-2"></div>
    </div>
  </div>
</nav>

<script>
  import { useAuth } from '../../hooks/useAuth';

  const auth = useAuth();

  const updateAuthUI = () => {
    const authed = auth.isAuthenticated();
    const dropdownMenu = document.getElementById('user-dropdown-menu');
    const mobileMenuAuthSection = document.getElementById('auth-section-mobile-menu');

    if (!dropdownMenu || !mobileMenuAuthSection) return;

    dropdownMenu.innerHTML = ''; // Clear previous items
    mobileMenuAuthSection.innerHTML = '';

    if (authed) {
      // Authenticated user menu
      dropdownMenu.innerHTML = `
        <a href="/admin/settings" class="block w-full text-left px-4 py-2 text-sm text-white/90 hover:bg-white/10">Ajustes</a>
        <button id="logout-btn-desktop" class="block w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-white/10">Cerrar sesi贸n</button>
      `;
      mobileMenuAuthSection.innerHTML = `
        <a href="/admin/settings" class="mobile-menu-link text-white/90 hover:text-white hover:bg-white/10 rounded-xl px-4 py-3 text-sm font-bold uppercase tracking-wide transition-colors">Ajustes</a>
        <button id="logout-btn-mobile" class="mobile-menu-link text-red-500 hover:text-white hover:bg-white/10 rounded-xl px-4 py-3 text-sm font-bold uppercase tracking-wide transition-colors w-full text-left">Cerrar sesi贸n</button>
      `;
    } else {
      // Unauthenticated user menu
      dropdownMenu.innerHTML = `
        <a href="/admin/login" class="block px-4 py-2 text-sm text-white/90 hover:bg-white/10">Iniciar sesi贸n</a>
        <a href="/admin/register" class="block px-4 py-2 text-sm text-white/90 hover:bg-white/10">Registrarse</a>
      `;
      mobileMenuAuthSection.innerHTML = `
        <a href="/admin/login" class="mobile-menu-link text-yellow-400 hover:text-white hover:bg-white/10 rounded-xl px-4 py-3 text-sm font-bold uppercase tracking-wide transition-colors">Iniciar sesi贸n</a>
        <a href="/admin/register" class="mobile-menu-link text-yellow-400 hover:text-white hover:bg-white/10 rounded-xl px-4 py-3 text-sm font-bold uppercase tracking-wide transition-colors">Registrarse</a>
      `;
    }

    // Add event listeners for logout buttons
    document.getElementById('logout-btn-desktop')?.addEventListener('click', () => {
      auth.logout();
      window.location.reload();
    });
    document.getElementById('logout-btn-mobile')?.addEventListener('click', () => {
      auth.logout();
      window.location.reload();
    });
  };

  const initDropdown = () => {
    const toggleBtn = document.getElementById('user-dropdown-toggle');
    const menu = document.getElementById('user-dropdown-menu');

    if (!toggleBtn || !menu) return;

    toggleBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      menu.classList.toggle('hidden');
    });

    document.addEventListener('click', (e) => {
      if (!menu.classList.contains('hidden') && !toggleBtn.contains(e.target as Node)) {
        menu.classList.add('hidden');
      }
    });
  };

  const initMobileMenu = () => {
    // ... (same as before)
  };
  
  const initialize = () => {
    initMobileMenu();
    initDropdown();
    updateAuthUI();
  }

  document.addEventListener('astro:page-load', initialize);
  document.addEventListener('DOMContentLoaded', initialize);
</script>
